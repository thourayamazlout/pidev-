<form method="post" action="{{ path('sponsor_delete', {'refSponsor': sponsor.refSponsor}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sponsor.refSponsor) }}">
    <button class="btn">Delete</button>
</form>
