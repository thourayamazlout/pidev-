{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdUser</th>
                <th>username</th>
                <th>nom</th>
                <th>prenom</th>
                <th>Email</th>
                <th>mot de passe</th>
                <th>role</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.idUser }}</td>
                <td>{{ user.Username }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.Password }}</td>
                <td>{{ user.roles }}</td>
                <td>
                    <a href="{{ path('user_show', {'idUser': user.idUser}) }}"> <button type="button" class="btn btn-warning">Show</button></a>
                    <a href="{{ path('user_edit', {'idUser': user.idUser}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
