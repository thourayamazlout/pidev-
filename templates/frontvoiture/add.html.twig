{% extends 'base2.html.twig' %}

{% block title %} louer maintenant {% endblock %}

{% block body %}

<div class="whole-wrap">
    <div class="container box_1170">
        <div class="section-top-border">

            <h1 class="mb-30"> Louer une voiture </h1>

            {%  set flashbag_notices = app.session.flashbag.get('notice') %}
            {% if flashbag_notices is not empty %}
                <ul class="msg">
                    {% for notice in flashbag_notices %}
                        <li> {{ notice }}</li>

                    {% endfor %}
                </ul>
            {% endif %}


            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}

            {{ form_label(form.Nom,"Nom") }}
            {{ form_widget(form.Nom) }}

            {{ form_label(form.Prenom,"Prenom") }}
            {{ form_widget(form.Prenom) }}

            {{ form_label(form.Numerodetelephone,"Num√©ro de telephone") }}
            {{ form_widget(form.Numerodetelephone) }}

            {{ form_label(form.Permis,"Permis") }}
            {{ form_widget(form.Permis) }}

            {{ form_label(form.startat,"Date de debut ") }}
            {{ form_widget(form.startat) }}

            {{ form_label(form.endat,"Date de fin ") }}
            {{ form_widget(form.endat) }}

            {{ form_label(form.heuredebut,"Heure de debut") }}
            {{ form_widget(form.heuredebut) }}

            {{ form_label(form.heurefin,"Heure de fin") }}
            {{ form_widget(form.heurefin) }}

            {{ form_label(form.Voiture,"Voiture a louer ") }} <br/>
            {{ form_widget(form.Voiture) }}

            <br/><br/><br/>

            <button class="btn">{{ button_label|default('Louer') }}</button>

            {{ form_end(form) }}



        </div>
    </div>
</div>
    <style>
        .msg {
            background-color: #00bb00;
            color: #0b0b0b;
            padding: 1em 0;
            font: italic bold 12px/30px Georgia, serif;
            border: 1px solid #4CAF50;
        }
    </style>
{% endblock %}

