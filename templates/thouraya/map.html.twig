<!DOCTYPE html>
<html>
<head>
    <title>Simple Markers</title>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <style type="text/css">
        /* Always set the map height explicitly to define the size of the div
         * element that contains the map. */
        #map {
            height: 100%;
        }

        /* Optional: Makes the sample page fill the window. */
        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
    </style>
    <script>
        function initMap() {
            const myLatLng = { lat: 36.4006557, lng: 10.6190626 };
            const myZ = { lat: 36.3995503, lng: 10.1447085 };
            const myS = { lat: 35.8288175, lng: 10.6405392 };
            const myT = { lat: 33.9844105, lng: 8.0711309 };
            const map = new google.maps.Map(document.getElementById("map"), {
                zoom: 7,
                center: myLatLng,
            });
            new google.maps.Marker({
                position: myLatLng,
                map,
                title: "Hammamet",
            });
            new google.maps.Marker({
                position: myZ,
                map,
                title: "Zaghouan",
            });
            new google.maps.Marker({
                position: myT,
                map,
                title: "Tozeur",
            });
            new google.maps.Marker({
                position: myS,
                map,
                title: "Sousse",
            });
        }
    </script>
</head>
<body>
{% block body %}
<div id="map"></div>

<!-- Async script executes immediately and must be after any DOM elements used in callback. -->
<script
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDcjOqgCqWniAb2PGhXIaUJVXMHJgse0hs&callback=initMap&libraries=&v=weekly"
        async
</script>

{% endblock %}
</body>
</html>